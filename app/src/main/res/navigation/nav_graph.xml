<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/abjadListFragment">

    <fragment
        android:id="@+id/abjadListFragment"
        android:name="com.romijulianto.wordabjad.fragment.AbjadListFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_abjad_list">
        <action
            android:id="@+id/action_abjadListFragment_to_wordListFragment"
            app:destination="@id/wordListFragment" />
    </fragment>
    <fragment
        android:id="@+id/wordListFragment"
        android:name="com.romijulianto.wordabjad.fragment.WordListFragment"
        android:label="@string/word_list_fragment_label"
        tools:layout="@layout/fragment_word_list">
        <argument
            android:name="abjads"
            app:argType="string" />
    </fragment>
</navigation>